@model IEnumerable<Tech_Review_Site2.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Video Game Console Reviews</h2>

<p>
    @Html.ActionLink("Create Additional Console", "Create")
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.ConsoleName)</h3>  @*For each Iteration Title Appears*@
                    <p>
                        @Html.DisplayNameFor(model => model.ReleaseDate) :
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </p>
                @*<p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>*@
                <p>
                    @Html.ActionLink("Specs", "Specs", new { id = item.ReviewID }, new { @class = "btn btn-primary", role = "button" })
                </p>
            </div>
        </div>
    </div>
    }
</div>

